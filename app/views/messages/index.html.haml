
.flash-box
.wrapper
  = render 'shared/chat-side'
  .chat-main
    .main-header
      .main-header__left-box
        %h2{ class:'main-header__left-box__current-group', data:{group_id:'2033'}} 
          twice
        %ul.main-header__left-box__member-list 
          Memberï¼š
          %li.main-header__left-box__member-list__member test
      =link_to '/groups/2033/edit' do
        .main-header__edit-btn Edit
    .messages
      = render @messages
    .form
      = form_for [@group, @message],html: {class: 'msg_form'} do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit' 